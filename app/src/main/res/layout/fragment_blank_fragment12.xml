<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BlankFragment12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/competitons" />
                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/cv663684561"
                    android:elevation="5dp"
                    android:background="@drawable/textviewstyle">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/basic"
                        android:text="Competition: IPL Auction"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textSize="22sp"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:background="@drawable/textviewstyle"/>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:id="@+id/cv6684561"
                    android:elevation="5dp"
                    android:background="@drawable/textviewstyle">

                    <LinearLayout
                        android:id="@+id/ll7763163"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/basic"
                            android:text="INTRODUCTION"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="22sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:background="@drawable/textviewstyle"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_margin="10dp"
                            android:layout_height="200dp"
                            android:layout_weight="1.0"
                            android:scaleType="centerCrop"
                            android:background="@drawable/ipl"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/basic"
                            android:textSize="16sp"
                            android:layout_margin="10dp"
                            android:text="Welcome to the thrill of a live IPL Auction! Have you ever thought what to do if you get a chance to build your own IPL team. If you are really passionate about “Big game” Then this event is a must for you. Put yourselves in to the shoes of a bidder and build your dream and a fantasy IPL team that you always wanted to lift the coveted trophy."/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/basic"
                            android:text="Event Format"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="22sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold"
                            android:background="@drawable/textviewstyle"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/basic"
                            android:text="Preliminary Round"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/basic"
                            android:textSize="16sp"
                            android:layout_margin="10dp"
                            android:text="1.This is a quizzing round. All the questions in the quiz are related to previous editions of IPL.

2.This is also an elimination round, Top 8 performers of the quiz will be qualified for the Auction round.
"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/basic"
                            android:text="Auction Round"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/basic"
                            android:textSize="16sp"
                            android:layout_margin="10dp"
                            android:text="1.Each franchise Will be given T and C document at the beginning of this round and a list of players (with ratings) will be displayed on screen.

2.Each franchise should Bid their team within the alloted virtual money following the rules provided in the T and C document.
 "
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/basic"
                            android:text="RULES"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/basic"
                            android:textSize="16sp"
                            android:layout_margin="10dp"
                            android:text="1.Each team should consist of a maximum of 6 members.

2.No member should be a part of 2 or more teams. If so, both the teams will be disqualified.

3.All the team members should be present for both rounds.

4.The decision of the judges will be final and no more contentions are encouraged.
"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/basic"
                            android:text="EVALUATION PROCEDURE and PRIZES"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            android:layout_margin="10dp"
                            android:textColor="@color/colorPrimary"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/basic"
                            android:textSize="16sp"
                            android:layout_margin="10dp"
                            android:text="1.Evaluation procedure will be mentioned in the T and C document.

2.Prizes worth 10k will be distributed between winners.
"
                            />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>